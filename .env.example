# Docker Mailserver Environment Configuration
# Copy this file to .env and modify the values as needed

# Domain Configuration
HOSTNAME=mail
DOMAINNAME=domain.com

# SSL Configuration
# Options: empty, letsencrypt, custom, manual, self-signed
SSL_TYPE=self-signed

# Security Features
ENABLE_FAIL2BAN=1
ENABLE_MANAGESIEVE=0
ENABLE_POP3=0
ENABLE_FETCHMAIL=0

# Network Configuration
PERMIT_DOCKER=network

# SpamAssassin Configuration
SA_TAG=2.0
SA_TAG2=6.31
SA_KILL=6.31

# SMTP Configuration
SMTP_ONLY=0

# Debug (set to 1 for verbose logging)
DMS_DEBUG=0

# Timezone
TZ=UTC